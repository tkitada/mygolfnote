<% if practice_post.favorited_by?(current_user) %>
  <%= link_to practice_post_favorites_path(practice_post), method: :delete do %>
    <i class="fa-solid fa-thumbs-up"></i>
    <%= practice_post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to practice_post_favorites_path(practice_post), method: :post do %>
    <i class="fa-regular fa-thumbs-up"></i>
    <%= practice_post.favorites.count %> いいね
  <% end %>
<% end %>