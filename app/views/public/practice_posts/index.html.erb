<div class="dropdown mb-3 ml-3">
  <button class="btn btn-success dropdown-toggle" type="button" id="tagDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  <i class="fa-sharp fa-solid fa-tag"></i>タグ一覧
  </button>
  <div class="dropdown-menu" aria-labeledby="tagDropdown">
    <% @tag_list.each do |list| %>
      <i class="fa-sharp fa-solid fa-tag"></i>
      <%= link_to list.name, search_tag_path(tag_id: list.id), class: "badge badge-dark rounded-pill" %>
      <%= "(#{list.practice_posts.count})" %>
    <% end %>
  </div>
</div>

<div class="card-list-container py-3">
  <% @practice_posts.each do |practice_post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(practice_post.user) do %>
            <%= profile_image_for(practice_post.user, size: 50) %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(practice_post_path(practice_post.id), class: "text-dark") do %>
              <strong><i class="fa-solid fa-bullseye"></i><span> <%= practice_post.practice_focus %></span></strong>
            <% end %>
          </p>
          <p class="card-text"><i class="fa-solid fa-file-pen"></i>：<%= practice_post.content %></p>
          <span>
            <i class="fas fa-user"></i> By <%= practice_post.user.name %> ｜ 
            <i class="fa-regular fa-comment"></i> コメント数： <%= practice_post.post_comments.count %> ｜
            <span id="favorite_btn_<%= practice_post.id %>">
              <%= render "public/favorites/btn", practice_post: practice_post %>
            </span>
          </span>
          <p>
            <% practice_post.tags.each do |tag| %>
              <span class="badge badge-dark rounded-pill"><%= tag.name %></span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= paginate @practice_posts %>

