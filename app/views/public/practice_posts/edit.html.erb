<div class='container W-100 my-3'>
  <div class='row my-4 w-75'>
    <div class="col-12">
      <h4 class="table-light thead-color px-3 mb-3 text-start d-inline-block">
        <%= "#{@practice_post.user.name}" %>さんのGolf note編集 %>
      </h4>
      <%= form_with model:@practice_post, url: edit_practice_post_path(@practice_post), local: true do |f| %>
        <div class="form-row mb-2">
          <div class="col-form-label col-md-2">
            練習日
          </div>
          <div class="col-md-5">
            <p class="form-control-plaintext">
              <%= f.date_field :practice_date %>
            </p>
          </div>
        </div>

        <div class="form-row mb-2">
          <div class="col-form-label col-md-2">
            練習テーマ
          </div>
          <div class="col-md-5">
            <p class="form-control-plaintext">
              <%= f.text_field :practice_focus %>
            </p>
          </div>
        </div>

        <div class="form-row mb-2">
          <div class="col-form-label col-md-2">
            球数
          </div>
          <div class="col-md-5">
            <p class="form-control-plaintext">
              <%= f.number_field :shot_hits %>
            </p>
          </div>
        </div>

        <div class="form-row mb-2">
          <div class="col-form-label col-md-2">
            練習メモ
          </div>
          <div class="col-md-5">
            <p class="form-control-plaintext">
              <%= f.rich_text_area :content %>
            </p>
          </div>
        </div>


        <div class="form-row mb-3">
          <div class="col-md-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="col-md-3">
            <%= link_to "投稿削除", users_golfnotes_path(@user), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>





