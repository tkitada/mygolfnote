<div class='container W-100 my-3'>
  <div class='row my-4 w-75'>
    <div class="col-12">
      <h4 class="px-3 mb-3 text-start d-inline-block">
        タグが<%= @tag.name %>の投稿
      </h4>

      <div>
        <% @tag_list.each do |list| %>
          <i class="fa-sharp fa-solid fa-tag"></i>
          <span class="badge badge-dark rounded-pill">
            <%= link_to list.name, search_tag_path(post_tag_id: list.id) %>
          </span>
          <%= "(#{list.practice_posts.count})" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-list-container py-5">
  <% @practice_posts.each do |practice_post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(practice_post.user) do %>
            <%= profile_image_for(practice_post.user, size: 50) %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(practice_post_path(practice_post.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= practice_post.practice_focus %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= practice_post.content %></p>
          <span>
            <i class="fas fa-user"></i> By <%= practice_post.user.name %> ｜ 
            <i class="fa-regular fa-comment"></i> コメント数： <%= practice_post.post_comments.count %> ｜
            <span id="favorite_btn_<%= practice_post.id %>">
              <%= render "public/favorites/btn", practice_post: practice_post %>
            </span>
          </span>
          <p>
            <% practice_post.tags.each do |tag| %>
              <span class="badge badge-dark rounded-pill"><%= tag.name %></span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

