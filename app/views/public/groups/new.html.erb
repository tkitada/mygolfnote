<div class='container W-100 my-4'>
  <div class='row justify-content-center'>
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-body"> 
          <%= form_with model: @group, url: groups_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :name, "グループ名", class: "font-weight-bold" %>
              <%= f.text_field :name, class: "form-control w-100" %>
            </div>

            <div class="form-group">
              <%= f.label :introduction, "紹介文", class: "font-weight-bold" %>
              <%= f.text_area :introduction, class: "form-control w-100" %>
            </div>

            <div class="form-group">
              <%= f.label :group_image, "グループ画像", class: "font-weight-bold" %>
              <%= f.file_field :group_image, class: "form-control-file", accept: "image/*" %>
            </div>

            <div class="text-right">
              <%= f.submit "作成する", class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  
