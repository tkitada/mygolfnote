<div class="card mb-4 shadow-sm mx-auto" style="max-width: 600px;">
  <div class="card-body d-flex flex-column justify-content-between" style="min-height: 200px;">
    <div class="mr-3">
      <%= render "profile_image" %>
    </div>
    <div class="mb-2">
      <h5 class="mb-1"><%= @user.name %></h5>
      <small class="text-muted">ベストスコア：<%= @user.best_score %> / 平均スコア：<%= @user.average_score %></small><br>
      <small class="text-muted">ゴルフ歴：<%= @user.golf_experience %> / 目標：<%= @user.golf_goals %></small><br>
      <small class="text-muted">メールアドレス：<%= @user.email %></small>
    </div>
    <% if @user == current_user %>
      <div class="d-flex justify-content-end mt-2">
        <%= link_to edit_user_path(@user), class: " btn btn-success" do %>
          <i class="fa-solid fa-user-pen"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

    






