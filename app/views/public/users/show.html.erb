<div class="container my-3">
  <h3 class="table-light thead-color px-3 my-4 fs-6 text-start d-inline-block">
    <%= render "profile_image" %>
  </h3>
  <div class="form-row mb-4">
    <div class="col-md-5 ml-3">
      <%= link_to "編集する", users_info_edit_path(@user), class: " btn btn-success" %>
    </div>
  </div>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>アカウント名</th>
        <td><%= @user.name %></td>
      </th>
      <tr>
        <th>ベストスコア</th>
        <td><%= @user.best_score %></td>
      </tr>
      <tr>
        <th>平均スコア</th>
        <td><%= @user.average_score %></td>
      </tr>
      <tr>
        <th>ゴルフ歴(年数)</th>
        <td><%= @user.golf_experience %></td>
      </tr>
      <tr>
        <th>ゴルフの目標</th>
        <td><%= @user.golf_goals %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
</div>