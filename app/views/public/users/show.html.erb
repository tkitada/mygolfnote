<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <%= render 'user_profile' %>
      <% if @practice_posts.any? %>
        <div class="d-flex flex-wrap">
          <% @practice_posts.each do |practice_post| %>
            <div class="card m-2 flex-fill" style="min-width: 300px; max-width: 48%;">
              <div class="card-body">
                <div class="d-flex">
                  <div class="col-12">
                    <h5 class="card-title">
                      <%= link_to practice_post_path(practice_post), class: "text-dark" do %>
                        <i class="fa-solid fa-bullseye"></i> <%= practice_post.practice_focus %>
                      <% end %>
                    </h5>
                    <p class="card-text"><i class="fa-solid fa-file-pen"></i>：<%= practice_post.content %></p>
                    <div class="d-flex align-items-center mt-2">
                      <span id="favorite_btn_<%= practice_post.id %>">
                        <%= render "public/favorites/btn", practice_post: practice_post %>
                      </span>
                      <span class="ml-3 text-muted">
                        <i class="fa-regular fa-comment"></i><%= practice_post.post_comments.count %>
                      </span>
                    </div>
                    <p>
                      <% practice_post.tags.each do |tag| %>
                        <span class="badge badge-dark rounded-pill"><%= tag.name %></span>
                      <% end %>
                    </p>
                  </div>
                </div>
                <% if @user == current_user %>
                  <div class="d-flex justify-content-end mt-2">
                    <%= link_to edit_practice_post_path(practice_post.id), class: " btn btn-secondary" do %>
                      <i class="fa-solid fa-pen-to-square"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center mt-4">
          <i class="far fa-frown"></i> 投稿がまだありません。
        </div>
      <% end %>
    </div>
  </div>
</div>
  