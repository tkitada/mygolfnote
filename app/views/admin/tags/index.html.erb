<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <div class="card shadow-sm p-3">
        <h5 class="card-header bg-success text-white">
          タグ作成
        </h5>
        <% if @tag.errors.any? %>
          <%= @tag.errors.count %>件のエラーが発生しました
          <ul class="error-messages">
            <% @tag.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @tag, url: admin_tags_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name, "タグ名" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <%= f.submit "作成", class: "btn btn-info w-100" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">
      <h5>タグ一覧</h5>

      <div class="row g-3">
        <% @tags.each do |tag| %>
          <div class="col-md-4 col-sm-6">
            <div class="card p-3 shadow-sm">
              <h5 class="card-title"><%= tag.name %></h5>
              <div class="d-flex gap-2 mt-2">
                <%= link_to "編集", edit_admin_tag_path(tag), class: "btn btn-sm btn-info" %>
                <%= link_to "削除", admin_tag_path(tag), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

