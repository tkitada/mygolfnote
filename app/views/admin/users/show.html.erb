<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの会員詳細</h4>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @user.id %></td>
          </tr>

          <tr>
            <th>ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
  
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>ステータス</th>
            <td>
              <% if @user.is_active %>
                <div class="text-success">有効</div>
              <% else %>
                <div class="text-secondary">無効</div>
              <% end %>            
            </td>
          </tr>

          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success" %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
