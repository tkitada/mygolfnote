<div class='container my-3'>
  <div class='row justify-content-center'>
    <div class="col-md-5">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">管理者ログイン</div>
        
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

        <div class="card-body">
          <%= form_with model: resource, url: admin_session_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :email, 'メールアドレス' %>
              <%= f.email_field :email, class: "form-control w-100", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'パスワード' %>
              <%= f.password_field :password, class: "form-control w-100", autocomplete: "current-password" %>
            </div>      

            <div class="text-right">
              <%= f.submit "ログイン", class: "btn btn-secondary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


